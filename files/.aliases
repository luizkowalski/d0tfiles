alias berd="git ls-files -m --others --exclude-standard | xargs ls -1 2>/dev/null | grep '\.rb$' | xargs bundle exec rubocop -D"
alias beru="git ls-files -m --others --exclude-standard | xargs ls -1 2>/dev/null | grep '\.rb$' | xargs bundle exec rubocop -A"
alias flushdns="sudo dscacheutil -flushcache; sudo killall -HUP mDNSResponder"
alias genpasswd="shuf -n 3 /usr/share/dict/words | tr '\n' ' ' | tr '[:upper:]' '[:lower:]' | sed 's/^[ \t]*//;s/[ \t]*$//'| pbcopy"
alias merge_main="git fetch origin && git merge origin/main"
alias merge_master="git fetch origin && git merge origin/master"
alias rebase_main="git fetch origin && git rebase origin/main"
alias rebase_master="git fetch origin && git rebase origin/master"
alias t="bin/rails test"
alias zshconfig="code ~/.zshrc"
